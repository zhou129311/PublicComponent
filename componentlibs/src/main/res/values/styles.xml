<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Dialog_My" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="dialog_divide_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#666666</item>
        <item name="android:layout_marginLeft">24px</item>
        <item name="android:layout_marginRight">24px</item>
    </style>

    <style name="base_button_style" parent="Base.Widget.AppCompat.Button.Borderless"/>

    <!--DIALOG的OK按钮-->
    <style name="dialog_ok_btn_style" parent="base_button_style">
        <item name="android:layout_width">180px</item>
        <item name="android:layout_height">54px</item>
        <item name="android:textSize">@dimen/dialog_btn_text_size</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:text">@string/ok_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_ok_btn_bg</item>
    </style>
    <!--DIALOG的CANCEL按钮-->
    <style name="dialog_cancel_btn_style" parent="base_button_style">
        <item name="android:layout_width">180px</item>
        <item name="android:layout_height">54px</item>
        <item name="android:textSize">@dimen/dialog_btn_text_size</item>
        <item name="android:textColor">@color/dialog_cancel_text_color</item>
        <item name="android:text">@string/cancel_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_cancel_btn_bg</item>
    </style>

    <!--button 1 style-->
    <style name="button_1_style"  parent="base_button_style">
        <item name="android:text">@string/ok_btn</item>
        <item name="android:textColor">@color/button_1_color</item>
        <item name="android:background">@drawable/button_1_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <!--第1种按钮样式-->
    <style name="button_1"  parent="base_button_style">
        <item name="android:background">@drawable/button_1_slt</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#787a80</item>
        <item name="android:textSize">24px</item>
    </style>
    <!--第2种按钮样式-->
    <style name="button_2"  parent="base_button_style">
        <item name="android:background">@drawable/button_1_slt</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#787a80</item>
        <item name="android:textSize">24px</item>
        <item name="android:layout_width">156px</item>
        <item name="android:layout_height">48px</item>
    </style>

    <style name="divide_style">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="call_sos_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="call_sos_clay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent
        </item>  <!-- 设置window背景透明，也就是去边框 -->
    </style>

    <style name="unless_NoTitle" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent
        </item>  <!-- 设置window背景透明，也就是去边框 -->
    </style>

    <style name="normal_title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#263238</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <style name="security_seekbar_element_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_notitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
